@{
    ViewBag.Title = "Realtime Application";
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Realtime App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    
</head>
<body>
    <nav class="navbar">
        <div class="logo">
            <div class="logo-wrapper">
                <svg class="cube-icon-advanced" viewBox="0 0 100 100">
                    <defs>
                        <radialGradient id="ringGradient" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
                            <stop offset="0%" style="stop-color:rgb(240,248,255);stop-opacity:0.0;" />
                            <stop offset="60%" style="stop-color:rgb(173,216,230);stop-opacity:0.6;" />
                            <stop offset="100%" style="stop-color:rgb(135,206,235);stop-opacity:0.0;" />
                        </radialGradient>
                    </defs>

                    <path class="ring-gradient-fill ring1"
                          d="M50 0 A50 50 0 0 1 100 50 L90 50 A40 40 0 0 0 50 10 Z" />
                    <path class="ring-gradient-fill ring2"
                          d="M100 50 A50 50 0 0 1 50 100 L50 90 A40 40 0 0 0 90 50 Z" />
                    <path class="ring-gradient-fill ring3"
                          d="M50 100 A50 50 0 0 1 0 50 L10 50 A40 40 0 0 0 50 90 Z" />
                    <path class="ring-gradient-fill ring4"
                          d="M0 50 A50 50 0 0 1 50 0 L50 10 A40 40 0 0 0 10 50 Z" />

                    <polygon class="top-face" points="50,25 75,40 50,55 25,40" />
                    <polygon class="left-face" points="25,40 25,65 50,80 50,55" />
                    <polygon class="right-face" points="75,40 75,65 50,80 50,55" />
                </svg>
            </div>
            <div class="logo-text-realtime">realtime</div>
        </div>
        <ul class="nav-links">
            <li><a href="#" class="active">Overview</a></li>
            <li><a href="#">Delivery</a></li>
            <li><a href="#">Transportation</a></li>
            <li><a href="#">Costs</a></li>
            <li><a href="#">Inventory</a></li>
            <li><a href="#">Reports</a></li>
        </ul>
        <div class="user-profile-section">
            <div class="user-profile">
                <img src="https://via.placeholder.com/150/4A67B6/FFFFFF?text=MA" alt="User Avatar">
                <div class="user-info">
                    <span class="name">Mark Avrelly</span>
                    <span class="role">Logist</span>
                </div>
            </div>
            <div class="settings-icon-container">
                <i class="fas fa-cog"></i>
            </div>
        </div>
    </nav>
</body>
</html>